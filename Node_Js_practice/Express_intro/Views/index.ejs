<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
</head>

<body align="center">
    <a href="/">Home</a>
    <a href="/add-student">Add Student</a>

    <h1>Student List</h1>
    <table border width="50%" align="center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Student Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Mobail No</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            <% students.map(stu => { %>
                <tr>
                    <td><%= stu.id %></td>
                    <td><%= stu.name %></td>
                    <td><%= stu.age %></td>
                    <td><%= stu.email %></td>
                    <td><%= stu.mobileno %></td>
                    <td><a href="/edit-student/<%= stu.id %>">Edit</a></td>
                    <td><a href="/delete-student/<%= stu.id %>">Delete</a></td>
                </tr>
                <% }) %>
    </table>

</body>

</html>