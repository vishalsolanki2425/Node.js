<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>To Do List</title>
    <style>
        body {
            background-color: #e4e4e4;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .task-date{
            background-color: #e4e4e4;
            color: #000000;
            font-size: 14px;
            padding: 5px;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <div class="text-center mb-5 d-flex align-items-center justify-content-center fs-2">
            <div class="header-icon">üìù</div>
            <h1 class="m-0">To Do List</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-5">
                    <div class="card-header text-dark">
                        <h2 class="h5 m-2 text-center">Add New Task</h2>
                    </div>
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Task Name</label>
                                <input type="text" name="name" class="form-control"
                                    placeholder="Enter task name" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Task Description</label>
                                <textarea name="desc" class="form-control" rows="3" placeholder="Enter task description"
                                    required></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Date & Time</label>
                                    <input type="datetime-local" name="dt" class="form-control" required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Priority</label>
                                    <select name="priority" class="form-select" required>
                                        <option value="">-- Select Priority --</option>
                                        <option value="Low">Low</option>
                                        <option value="Medium">Medium</option>
                                        <option value="High">High</option>
                                    </select>
                                </div>
                            </div>

                            <div align="center" class="mt-4">
                                <button type="submit" class="btn btn-outline-dark">Add Task</button>
                            </div>
                        </form>
                    </div>
                </div>

                <h2 class="h4 mb-4 text-center">Your Tasks</h2>
                <% tasks.forEach(task=> { %>
                    <div class="card mb-3 task-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title fw-bold mb-1">
                                        <%= task.name %>
                                    </h5>
                                    <p class="card-text mb-2">
                                        <%= task.desc %>
                                    </p>
                                    <div class="d-flex align-items-center">
                                        <span class="task-date me-3">
                                            <%= task.dt %>
                                        </span>
                                        <span class="task-priority text-dark">
                                            <%= task.priority %>
                                        </span>
                                    </div>
                                </div>
                                <div class="btn-group gap-3 mt-4">
                                    <a href="/edit_task/<%= task.id %>"><button class="btn btn-sm btn-outline-dark">üñâ</button></a>
                                    <a href="/delete_task/<%= task.id %>"><button class="btn btn-sm btn-outline-danger">‚úó</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>