<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        :root {
            --green: #27ae60;
            --green-dark: #1f8f50;
            --bg: #f5f7f9;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(39, 174, 96, .08), rgba(39, 174, 96, .02)), var(--bg);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans";
        }

        .auth-card {
            width: 100%;
            max-width: 460px;
            background: #fff;
            border: 0;
            border-radius: 20px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, .08);
            overflow: hidden;
        }

        .auth-header {
            background: linear-gradient(135deg, var(--green), #32c474);
            color: #fff;
            padding: 26px 24px;
        }

        .auth-header h2 {
            font-size: 24px;
            margin: 0;
        }

        .form-control:focus {
            border-color: var(--green);
            box-shadow: 0 0 0 .25rem rgba(39, 174, 96, .15);
        }

        .btn-green {
            background: var(--green);
            border-color: var(--green);
        }

        .btn-green:hover {
            background: var(--green-dark);
            border-color: var(--green-dark);
        }

        .divider {
            display: flex;
            align-items: center;
            gap: 12px;
            color: #9aa4af;
            font-size: 14px;
        }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            height: 1px;
            background: #e9ecef;
        }

        .form-check-input:checked {
            background-color: var(--green);
            border-color: var(--green);
        }
    </style>
</head>

<body>

    <div class="card auth-card">
        <div class="auth-header">
            <h2 class="text-center">Login</h2>
        </div>

        <div class="card-body p-4 p-md-5">
            <form action="/login" method="POST" enctype="multipart/form-data">

                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input id="email" name="email" type="email" class="form-control" placeholder="Enter Your Email"
                        required />
                </div>

                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <div class="input-group">
                        <input id="password" name="password" type="password" class="form-control"
                            placeholder="Enter Your Password" required minlength="6" />
                        <button class="btn" type="button" id="togglePwd"
                            aria-label="Show password">
                            <i id="eyeIcon" class="fa fa-eye"></i>
                        </button>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="remember" name="remember" />
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>
                    <a href="/forgot-password" class="muted-link" style="color: #27ae60;">Forgot password</a>
                </div>

                <button type="submit" class="btn btn-green w-100 py-2">Login</button>

                <div class="my-4 divider"><span>or</span></div>
                <div class="d-grid gap-2">
                    <a href="/auth/google" class="btn btn-outline-success"><img alt=""
                            src="https://www.svgrepo.com/show/475656/google-color.svg" width="18" class="me-2"> Continue
                        with Google</a>
                </div>
            </form>

            <p class="text-center mt-4 mb-0">New here?
                <a href="/web/register" class="text-success text-decoration-none">Create an account</a>
            </p>
        </div>
    </div>

    <script>
        const pwd = document.getElementById('password');
        const btn = document.getElementById('togglePwd');
        const eyeIcon = document.getElementById('eyeIcon');

        btn.addEventListener('click', () => {
            if (pwd.type === 'password') {
                pwd.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
                btn.setAttribute('aria-label', 'Hide password');
            } else {
                pwd.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
                btn.setAttribute('aria-label', 'Show password');
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>