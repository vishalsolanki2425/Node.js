<%- include('../header') %>

<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Edit Extra Category</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit Extra Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form class="form-horizontal" action="/extracategory/editextraCategory/<%= extracategory._id %>" method="post">
                        <div class="card-body">
                            <h4 class="card-title">Category Details</h4>

                            <div class="form-group row">
                                <label for="category" class="col-sm-3 text-right control-label col-form-label">Category Name</label>
                                <div class="col-sm-9">
                                    <select class="form-control" name="categoryname" id="category">
                                        <option value="">Select Category</option>
                                        <% category.forEach((cat) => { %>
                                            <option value="<%= cat._id %>" 
                                                <% if(extracategory.categoryname && cat._id.toString() === extracategory.categoryname.toString()) { %> 
                                                    selected 
                                                <% } %>>
                                                <%= cat.categoryname %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="subcategory" class="col-sm-3 text-right control-label col-form-label">Sub Category Name</label>
                                <div class="col-sm-9">
                                    <select class="form-control" name="subcategoryname" id="subcategory">
                                        <option value="">Select Sub Category</option>
                                        <% subcategories.forEach((sub) => { %>
                                            <option value="<%= sub._id %>" 
                                                <% if(extracategory.subcategoryname && sub._id.toString() === extracategory.subcategoryname.toString()) { %> 
                                                    selected 
                                                <% } %>>
                                                <%= sub.subcategoryname %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="extracategory" class="col-sm-3 text-right control-label col-form-label">Extra Category Name</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="extracategoryname" 
                                           value="<%= extracategory.extracategoryname %>" 
                                           id="extracategory" placeholder="Enter Your Extra Category Name">
                                </div>
                            </div>
                        </div>

                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Page Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
</div>

<%- include('../footer') %>

<script>
document.addEventListener('DOMContentLoaded', () => {
    let category = document.getElementById("category");
    let subcategory = document.getElementById("subcategory");

    let selectedSubCategory = "<%= extracategory.subcategoryname %>";

    category.addEventListener('change', () => {
        let categoryId = category.value;
        subcategory.innerHTML = "<option value=''>Select Sub Category</option>";

        if (!categoryId) return;

        fetch(`/subcategory/getAllSubCategory?categoryId=${categoryId}`)
            .then(res => res.json())
            .then(data => {
                data.subcategories.forEach(sub => {
                    let option = document.createElement('option');
                    option.value = sub._id;
                    option.textContent = sub.subcategoryname;
                    if(sub._id.toString() === selectedSubCategory.toString()) {
                        option.selected = true;
                    }

                    subcategory.appendChild(option);
                });
            })
            .catch(err => console.error("Error loading subcategories:", err));
    });
    if(category.value) {
        category.dispatchEvent(new Event('change'));
    }
});
</script>