<%- include("header") %>

    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Blog Details</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item"><a href="/blog/viewallblog">Blogs</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    <%= blogs.title %>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb -->
        <!-- ============================================================== -->

        <!-- ============================================================== -->
        <!-- Container fluid -->
        <!-- ============================================================== -->
        <div class="container my-5">
            <h1 class="fw-bold text-center mb-4">
                <%= blogs.title %> ( <%= blogs.category %> )
            </h1>
            <div class="d-flex justify-content-center mb-3">
                <span>✍ By
                    <strong>
                        <%= blogs.authname %>
                    </strong>
                </span>
            </div>
            <div class="d-flex justify-content-center mb-4">
                <span> 21, August 2025</span>
            </div>
            <div class="mb-5 text-center">
                <img src="<%= blogs.blogimage %>" alt="Blog Image" class="img-fluid rounded shadow"
                    style="max-height: 500px; object-fit: cover; width: 100%;">
            </div>
            <h2 class="fw-bold text-center mb-4">
                <%= blogs.title %> ( <%= blogs.category %> )
            </h2>
            <div class="fs-5 lh-lg px-3">
                <% blogs.description.split("\n").forEach(function(paragraph){ %>
                    <p><%= paragraph %></p>
                    <% }) %>
            </div>
            <div class="text-center mt-5 mb-3">
                <a href="/blog/myblog" class="btn btn-outline-primary px-4">← Back to Blogs</a>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid -->
        <!-- ============================================================== -->
    </div>

    <%- include("footer") %>