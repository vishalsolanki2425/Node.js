<%- include("header") %>

<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">My Profile</h4>
        <div class="ml-auto text-right">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">Profile</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
        <div class="card shadow-sm text-center p-3">
          <img 
            src="<%= user?.image || 'https://img.freepik.com/free-vector/smiling-young-man-illustration_1308-174669.jpg' %>" 
            alt="User Image" 
            class="rounded-circle mb-3 mt-3"
            style="width:150px; height:150px; object-fit:cover; border:4px solid #000000; margin-left: 130px;"
          />
          <h4 class="mb-2 mt-2">
            <%= (user?.firstname) + " " + (user?.lastname) %>
          </h4>
          <span class="text-muted"><%= user?.role || "User" %></span>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="card shadow-sm">
          <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Profile Details</strong>
            <a href="/users/editUser/<%= user._id %>" class="btn btn-sm btn-outline-primary">
              <i class="fa fa-pencil mr-1"></i> Edit Details
            </a>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-md-6">
                <label class="text-muted mb-0">Full Name</label>
                <div class="h6">
                  <%= (user?.firstname || "") + " " + (user?.lastname || "") %>
                </div>
              </div>
              <div class="col-md-6">
                <label class="text-muted mb-0">Contact No</label>
                <div class="h6"><%= user?.contactno || "—" %></div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <label class="text-muted mb-0">Email</label>
                <div class="h6"><%= user?.email || "—" %></div>
              </div>
              <div class="col-md-6">
                <label class="text-muted mb-0">Password</label>
                <div class="h6"><%= user?.password ? "********" : "—" %></div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <label class="text-muted mb-0">Gender</label>
                <div class="h6"><%= user?.gender || "—" %></div>
              </div>
              <div class="col-md-6">
                <label class="text-muted mb-0">Hobbies</label>
                <div class="h6"><%= user?.hobbies || "—" %></div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>

  <footer class="footer text-center">
    © <%= new Date().getFullYear() %> Your App
  </footer>
</div>

<%- include("footer") %>